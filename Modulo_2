    margin-top: 5;
}

.sidedrawer-content {
    background-color: #FAF3F0;
    padding-top: 10;
}

.sidedrawer-list-item {
    padding: 16 20;
    margin: 4 8;
    border-radius: 10;
}

.sidedrawer-list-item.selected {
    background-color: #E8D5FF;
}

.sidedrawer-list-item-icon {
    font-size: 22;
    margin-right: 15;
    color: #6B4C9A;
    vertical-align: center;
}

.sidedrawer-list-item-text {
    font-size: 16;
    color: #5D4E6D;
    vertical-align: center;
    font-weight: 500;
}

.sidedrawer-list-item.selected .sidedrawer-list-item-text {
    color: #6B4C9A;
    font-weight: bold;
}

.action-bar {
    background-color: #D4A5FF;
    color: #FFFFFF;
}
