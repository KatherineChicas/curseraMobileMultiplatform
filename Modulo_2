# Proyecto NativeScript con Angular - C√≥digo Completo

## src/app/services/task.service.ts

```typescript
import { Injectable } from '@angular/core';
import { BehaviorSubject, Observable } from 'rxjs';

export interface Task {
  id: number;
  title: string;
  description: string;
  completed: boolean;
  category?: string;
  priority?: string;
  assignee?: string;
  dueDate?: string;
}

@Injectable({
  providedIn: 'root'
})
export class TaskService {
  private tasks: Task[] = [
    { 
      id: 1, 
      title: 'Dise√±ar interfaz de usuario', 
      description: 'Crear mockups para la aplicaci√≥n m√≥vil con colores pasteles', 
      completed: false,
      priority: 'alta',
      category: 'Dise√±o',
      assignee: 'Mar√≠a Garc√≠a',
      dueDate: '2025-12-15'
    },
    { 
      id: 2, 
      title: 'Implementar autenticaci√≥n', 
      description: 'Configurar sistema de login con Firebase y validaciones', 
      completed: true,
      priority: 'alta',
      category: 'Desarrollo',
      assignee: 'Juan P√©rez',
      dueDate: '2025-12-10'
    },
    { 
      id: 3, 
      title: 'Optimizar rendimiento', 
      description: 'Mejorar tiempos de carga y optimizar im√°genes', 
      completed: false,
      priority: 'media',
      category: 'Performance',
      assignee: 'Ana L√≥pez',
      dueDate: '2025-12-20'
    },
    { 
      id: 4, 
      title: 'Escribir documentaci√≥n', 
      description: 'Documentar el c√≥digo y crear gu√≠as de usuario', 
      completed: false,
      priority: 'baja',
      category: 'Documentaci√≥n',
      assignee: 'Carlos Ruiz',
      dueDate: '2025-12-25'
    },
    { 
      id: 5, 
      title: 'Testing de la aplicaci√≥n', 
      description: 'Realizar pruebas unitarias, integraci√≥n y E2E', 
      completed: true,
      priority: 'alta',
      category: 'Testing',
      assignee: 'Laura Mart√≠nez',
      dueDate: '2025-12-08'
    }
  ];

  private tasksSubject = new BehaviorSubject<Task[]>(this.tasks);
  public tasks$: Observable<Task[]> = this.tasksSubject.asObservable();

  constructor() {
    console.log('‚úÖ TaskService initialized globally');
  }

  getTasks(): Task[] {
    return [...this.tasks];
  }

  getTaskById(id: number): Task | undefined {
    return this.tasks.find(task => task.id === id);
  }

  searchTasks(query: string): Task[] {
    if (!query || query.trim() === '') {
      return [...this.tasks];
    }
    
    const lowerQuery = query.toLowerCase();
    return this.tasks.filter(task => 
      task.title.toLowerCase().includes(lowerQuery) ||
      task.description.toLowerCase().includes(lowerQuery) ||
      task.category?.toLowerCase().includes(lowerQuery) ||
      task.assignee?.toLowerCase().includes(lowerQuery)
    );
  }

  addTask(task: Task): void {
    this.tasks.push(task);
    this.tasksSubject.next([...this.tasks]);
  }

  // ‚úÖ Requisito 3: M√©todo para agregar tareas aleatorias (pull to refresh)
  addRandomTask(): Task {
    const titles = [
      'Revisar c√≥digo',
      'Actualizar dependencias',
      'Crear nueva feature',
      'Refactorizar componente',
      'Solucionar bug cr√≠tico',
      'Implementar analytics',
      'Dise√±ar nueva pantalla',
      'Configurar CI/CD'
    ];
    
    const categories = ['Desarrollo', 'Dise√±o', 'Testing', 'DevOps', 'Documentaci√≥n'];
    const priorities = ['alta', 'media', 'baja'];
    const assignees = ['Mar√≠a Garc√≠a', 'Juan P√©rez', 'Ana L√≥pez', 'Carlos Ruiz', 'Laura Mart√≠nez'];
    
    const newId = Math.max(...this.tasks.map(t => t.id)) + 1;
    const randomTitle = titles[Math.floor(Math.random() * titles.length)];
    
    const newTask: Task = {
      id: newId,
      title: randomTitle,
      description: `Descripci√≥n de la tarea: ${randomTitle}`,
      completed: false,
      category: categories[Math.floor(Math.random() * categories.length)],
      priority: priorities[Math.floor(Math.random() * priorities.length)],
      assignee: assignees[Math.floor(Math.random() * assignees.length)],
      dueDate: new Date(Date.now() + Math.random() * 30 * 24 * 60 * 60 * 1000).toISOString().split('T')[0]
    };
    
    this.tasks.unshift(newTask);
    this.tasksSubject.next([...this.tasks]);
    return newTask;
  }

  toggleComplete(id: number): void {
    const task = this.tasks.find(t => t.id === id);
    if (task) {
      task.completed = !task.completed;
      this.tasksSubject.next([...this.tasks]);
    }
  }

  // ‚úÖ Requisito 4: M√©todo para cambiar categor√≠a
  updateCategory(id: number, category: string): void {
    const task = this.tasks.find(t => t.id === id);
    if (task) {
      task.category = category;
      this.tasksSubject.next([...this.tasks]);
    }
  }

  deleteTask(id: number): void {
    this.tasks = this.tasks.filter(t => t.id !== id);
    this.tasksSubject.next([...this.tasks]);
  }
}
```

