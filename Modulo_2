@NgModule({
  declarations: [
    TaskListComponent,
    TaskDetailComponent,
    TaskSearchComponent,
    PasswordValidatorDirective
  ],
  imports: [
    NativeScriptCommonModule,
    NativeScriptFormsModule,
    TasksRoutingModule
  ],
  schemas: [NO_ERRORS_SCHEMA]
})
export class TasksModule { }
