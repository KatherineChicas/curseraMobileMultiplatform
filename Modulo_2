## src/app/features/tasks/components/task-list/task-list.component.ts

```typescript
import { Component, OnInit } from '@angular/core';
import { RouterExtensions } from '@nativescript/angular';
import { TaskService, Task } from '~/app/services/task.service';
import { isAndroid } from '@nativescript/core';
import { action } from '@nativescript/core/ui/dialogs';
import { Toasty, ToastDuration, ToastPosition } from '@triniwiz/nativescript-toasty';
import { AnimationCurve } from '@nativescript/core';
import { View } from '@nativescript/core';

@Component({
  selector: 'ns-task-list',
  templateUrl: './task-list.component.html',
  styleUrls: ['./task-list.component.css']
})
export class TaskListComponent implements OnInit {
  tasks: Task[] = [];
  platformMessage: string = '';
  platformEmoji: string = '';
  isRefreshing: boolean = false;

  constructor(
    private taskService: TaskService,
    private routerExtensions: RouterExtensions
  ) {}

  ngOnInit(): void {
    this.loadTasks();
    
    if (isAndroid) {
      this.platformMessage = 'Est√°s usando Android';
      this.platformEmoji = 'ü§ñ';
      console.log('üì± Platform: Android');
    } else {
      this.platformMessage = 'Est√°s usando iOS';
      this.platformEmoji = 'üçé';
      console.log('üì± Platform: iOS');
    }
  }

  loadTasks(): void {
    this.tasks = this.taskService.getTasks();
  }

  // ‚úÖ Requisito 2: Navegaci√≥n con RouterExtensions
  onTaskTap(task: Task): void {
    this.routerExtensions.navigate(['/tasks/detail', task.id], {
      transition: {
        name: 'slide',
        duration: 300,
        curve: 'easeInOut'
      }
    });
  }

  // ‚úÖ Requisito 3: Pull to Refresh
  onPullToRefresh(args: any): void {
    const pullRefresh = args.object;
    
    setTimeout(() => {
      // Agregar nueva tarea aleatoria
      const newTask = this.taskService.addRandomTask();
      this.loadTasks();
      
      // ‚úÖ Requisito 5: Toast de notificaci√≥n
      const toast = new Toasty({
        text: `‚úÖ Nueva tarea agregada: ${newTask.title}`,
        duration: ToastDuration.SHORT,
        position: ToastPosition.BOTTOM,
        textColor: '#FFFFFF',
        backgroundColor: '#A5D6A7'
      });
      toast.show();
      
      pullRefresh.refreshing = false;
      this.isRefreshing = false;
    }, 1000);
  }

  onToggleComplete(task: Task, event: any): void {
    if (event) {
      event.stopPropagation();
    }
    this.taskService.toggleComplete(task.id);
    this.loadTasks();
    
    // ‚úÖ Requisito 5: Toast
    const message = task.completed ? '‚úì Tarea marcada como pendiente' : '‚úÖ Tarea completada';
    const toast = new Toasty({
      text: message,
      duration: ToastDuration.SHORT,
      position: ToastPosition.BOTTOM
    });
    toast.show();
  }

  // ‚úÖ Requisito 4: Di√°logo de acci√≥n para cambiar categor√≠a
  async onChangeCategory(task: Task, event: any): Promise<void> {
    if (event) {
      event.stopPropagation();
    }

    const options = {
      title: "Cambiar Categor√≠a",
      message: `Selecciona una categor√≠a para: ${task.title}`,
      cancelButtonText: "Cancelar",
      actions: ["Desarrollo", "Dise√±o", "Testing", "DevOps", "Documentaci√≥n", "Performance"]
    };

    const result = await action(options);
    
    if (result !== "Cancelar") {
      this.taskService.updateCategory(task.id, result);
      this.loadTasks();
      
      // ‚úÖ Requisito 5: Toast de confirmaci√≥n
      const toast = new Toasty({
        text: `‚úì Categor√≠a cambiada a: ${result}`,
        duration: ToastDuration.SHORT,
        position: ToastPosition.BOTTOM,
        backgroundColor: '#BBDEFB'
      });
      toast.show();
    }
  }

  // ‚úÖ Requisito 8: Detecci√≥n de gestos (Long Press)
  onLongPress(args: any, task: Task): void {
    const view = args.object as View;
    
    // ‚úÖ Requisito 9: Animaci√≥n
    view.animate({
      rotate: 360,
      duration: 500,
      curve: AnimationCurve.easeInOut
    }).then(() => {
      view.rotate = 0;
    });

    const toast = new Toasty({
      text: `üîÑ Mantuviste presionado: ${task.title}`,
      duration: ToastDuration.LONG,
      position: ToastPosition.CENTER
    });
    toast.show();
  }

  // ‚úÖ Requisito 8: Detecci√≥n de gestos (Double Tap)
  onDoubleTap(args: any, task: Task): void {
    const toast = new Toasty({
      text: `üëÜüëÜ Doble tap en: ${task.title}`,
      duration: ToastDuration.SHORT,
      position: ToastPosition.TOP
    });
    toast.show();
  }

  onSearch(): void {
    this.routerExtensions.navigate(['/tasks/search']);
  }

  getPriorityColor(priority?: string): string {
    switch(priority) {
      case 'alta': return '#FFB3BA';
      case 'media': return '#FFE4B5';
      case 'baja': return '#B3E5FC';
      default: return '#E0E0E0';
    }
  }
}
```

