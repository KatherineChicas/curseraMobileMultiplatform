            </StackLayout>
        </FlexboxLayout>
        
        <!-- M√°s informaci√≥n -->
        <StackLayout class="section">
            <Label text="üìÅ Categor√≠a" class="section-header"></Label>
            <Label [text]="task.category" class="detail-text"></Label>
        </StackLayout>
        
        <StackLayout class="section">
            <Label text="üë§ Asignado a" class="section-header"></Label>
