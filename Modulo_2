## src/app/features/tasks/components/task-list/task-list.component.html

```xml
<ActionBar title="Mis Tareas" class="action-bar">
    <ActionItem (tap)="onSearch()" ios.position="right" android.position="actionBar">
        <Label text="üîç" class="action-icon"></Label>
    </ActionItem>
</ActionBar>

<PullToRefresh (refresh)="onPullToRefresh($event)">
    <ScrollView class="page">
        <StackLayout>
            <!-- Banner de plataforma -->
            <GridLayout columns="auto, *" class="platform-banner">
                <Label col="0" [text]="platformEmoji" class="platform-emoji"></Label>
                <Label col="1" [text]="platformMessage" class="platform-label"></Label>
            </GridLayout>
            
            <!-- Encabezado -->
            <StackLayout class="header-section">
                <Label text="üìã Lista de Tareas" class="main-title"></Label>
                <Label [text]="'Total: ' + tasks.length + ' tareas'" class="subtitle"></Label>
                <Label text="üëÜ Toca una tarea | üëá Arrastra para actualizar" class="hint-text"></Label>
            </StackLayout>
            
            <!-- ‚úÖ Requisito 3: Pull to Refresh ListView -->
            <ListView [items]="tasks" class="tasks-list" separatorColor="transparent">
                <ng-template let-task="item">
                    <StackLayout class="task-card" 
                                 (tap)="onTaskTap(task)"
                                 (longPress)="onLongPress($event, task)"
                                 (doubleTap)="onDoubleTap($event, task)">
                        <GridLayout columns="auto, *, auto" rows="auto, auto, auto" class="task-content">
                            <!-- Estado -->
                            <Label col="0" row="0" rowSpan="3"
                                   [text]="task.completed ? '‚úÖ' : '‚≠ï'" 
                                   class="task-status"></Label>
                            
                            <!-- Info principal -->
                            <StackLayout col="1" row="0" class="task-info">
                                <Label [text]="task.title" 
                                       [class.completed-text]="task.completed"
                                       class="task-title" textWrap="true"></Label>
                                <Label [text]="task.description" 
                                       class="task-description" 
                                       textWrap="true"></Label>
                            </StackLayout>
                            
                            <!-- Categor√≠a y assignee -->
                            <StackLayout col="1" row="1" orientation="horizontal" class="task-meta">
                                <Label [text]="'üìÅ ' + task.category" class="meta-label"></Label>
                                <Label [text]="'üë§ ' + task.assignee" class="meta-label"></Label>
                            </StackLayout>
                            
                            <!-- Prioridad -->
                            <Label col="1" row="2"
                                   [text]="'‚ö° ' + (task.priority || 'media')"
                                   [backgroundColor]="getPriorityColor(task.priority)"
                                   class="priority-badge"></Label>
                            
                            <!-- Botones de acci√≥n -->
                            <StackLayout col="2" row="0" rowSpan="3" class="action-buttons">
                                <!-- ‚úÖ Requisito 4: Bot√≥n para cambiar categor√≠a -->
                                <Button text="üìÇ"
                                        (tap)="onChangeCategory(task, $event)"
                                        class="btn-category"></Button>
                                
                                <!-- Bot√≥n completar -->
                                <Button [text]="task.completed ? '‚Ü©Ô∏è' : '‚úì'"
                                        (tap)="onToggleComplete(task, $event)"
                                        [class]="task.completed ? 'btn-undo' : 'btn-complete'"></Button>
                            </StackLayout>
                        </GridLayout>
                    </StackLayout>
                </ng-template>
            </ListView>
            
            <!-- Mensaje vac√≠o -->
            <StackLayout *ngIf="tasks.length === 0" class="empty-state">
                <Label text="üì≠" class="empty-icon"></Label>
                <Label text="No hay tareas" class="empty-text"></Label>
            </StackLayout>
        </StackLayout>
    </ScrollView>
</PullToRefresh>
```

