## src/app/directives/password-validator.directive.ts

```typescript
import { Directive, forwardRef } from '@angular/core';
import { NG_VALIDATORS, Validator, AbstractControl, ValidationErrors } from '@angular/forms';

// ‚úÖ Requisito 7: Validador personalizado con directiva
@Directive({
  selector: '[appPasswordValidator]',
  providers: [{
    provide: NG_VALIDATORS,
    useExisting: forwardRef(() => PasswordValidatorDirective),
    multi: true
  }]
})
export class PasswordValidatorDirective implements Validator {
  validate(control: AbstractControl): ValidationErrors | null {
    const value = control.value;
    
    if (!value) {
      return null;
    }

    // Validar longitud m√≠nima
    if (value.length < 8) {
      return { 
        passwordValidator: { 
          message: 'La contrase√±a debe tener al menos 8 caracteres' 
        } 
      };
    }

    // Validar que contenga al menos una may√∫scula
    if (!/[A-Z]/.test(value)) {
      return { 
        passwordValidator: { 
          message: 'La contrase√±a debe contener al menos una may√∫scula' 
        } 
      };
    }

    // Validar que contenga al menos un n√∫mero
    if (!/[0-9]/.test(value)) {
      return { 
        passwordValidator: { 
          message: 'La contrase√±a debe contener al menos un n√∫mero' 
        } 
      };
    }

    // Validar que contenga al menos un car√°cter especial
    if (!/[!@#$%^&*(),.?":{}|<>]/.test(value)) {
      return { 
        passwordValidator: { 
          message: 'La contrase√±a debe contener al menos un car√°cter especial' 
        } 
      };
    }

    return null;
  }
}
```

