## src/app/features/tasks/components/task-search/task-search.component.ts

```typescript
import { Component, OnInit } from '@angular/core';
import { RouterExtensions } from '@nativescript/angular';
import { TaskService, Task } from '~/app/services/task.service';

@Component({
  selector: 'ns-task-search',
  templateUrl: './task-search.component.html',
  styleUrls: ['./task-search.component.css']
})
export class TaskSearchComponent implements OnInit {
  // ‚úÖ Requisito 6: Two-way binding
  searchQuery: string = '';
  searchResults: Task[] = [];
  password: string = '';
  showPassword: boolean = false;

  constructor(
    private taskService: TaskService,
    private routerExtensions: RouterExtensions
  ) {}

  ngOnInit(): void {
    this.searchResults = this.taskService.getTasks();
  }

  // B√∫squeda en tiempo real con two-way binding
  onSearchChange(): void {
    this.searchResults = this.taskService.searchTasks(this.searchQuery);
  }

  onTaskTap(task: Task): void {
    this.routerExtensions.navigate(['/tasks/detail', task.id]);
  }

  onBack(): void {
    this.routerExtensions.back();
  }

  togglePasswordVisibility(): void {
    this.showPassword = !this.showPassword;
  }

  getCategoryIcon(category?: string): string {
    switch(category) {
      case 'Desarrollo': return 'üíª';
      case 'Dise√±o': return 'üé®';
      case 'Testing': return 'üß™';
      case 'DevOps': return '‚öôÔ∏è';
      case 'Documentaci√≥n': return 'üìö';
      case 'Performance': return '‚ö°';
      default: return 'üìÅ';
    }
  }
}
```

