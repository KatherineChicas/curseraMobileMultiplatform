## src/app/features/tasks/components/task-list/task-list.component.ts

```typescript
import { Component, OnInit } from '@angular/core';
import { RouterExtensions } from '@nativescript/angular';
import { TaskService, Task } from '~/app/services/task.service';
import { isAndroid } from '@nativescript/core';

@Component({
  selector: 'ns-task-list',
  templateUrl: './task-list.component.html',
  styleUrls: ['./task-list.component.css']
})
export class TaskListComponent implements OnInit {
  tasks: Task[] = [];
  platformMessage: string = '';
  platformEmoji: string = '';

  constructor(
    private taskService: TaskService,
    private routerExtensions: RouterExtensions
  ) {}

  ngOnInit(): void {
    this.loadTasks();
    
    // ‚úÖ Requisito 10: C√≥digo espec√≠fico para Android
    if (isAndroid) {
      this.platformMessage = 'Est√°s usando Android';
      this.platformEmoji = 'ü§ñ';
      console.log('üì± Platform: Android');
    } else {
      this.platformMessage = 'Est√°s usando iOS';
      this.platformEmoji = 'üçé';
      console.log('üì± Platform: iOS');
    }
  }

  loadTasks(): void {
    this.tasks = this.taskService.getTasks();
  }

  onTaskTap(task: Task): void {
    this.routerExtensions.navigate(['/tasks/detail', task.id], {
      transition: {
        name: 'slide'
      }
    });
  }

  onToggleComplete(task: Task, event: any): void {
    // Prevenir la navegaci√≥n cuando se toca el bot√≥n
    if (event) {
      event.stopPropagation();
    }
    this.taskService.toggleComplete(task.id);
    this.loadTasks();
  }

  getPriorityColor(priority: string): string {
    switch(priority) {
      case 'alta': return '#FFB3BA'; // Rojo pastel
      case 'media': return '#FFE4B5'; // Naranja pastel
      case 'baja': return '#B3E5FC'; // Azul pastel
      default: return '#E0E0E0';
    }
  }
}
```

