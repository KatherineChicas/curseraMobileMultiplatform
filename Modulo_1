## src/app/features/tasks/components/task-detail/task-detail.component.ts

```typescript
import { Component, OnInit } from '@angular/core';
import { ActivatedRoute } from '@angular/router';
import { RouterExtensions } from '@nativescript/angular';
import { TaskService, Task } from '~/app/services/task.service';
import { isAndroid } from '@nativescript/core';

@Component({
  selector: 'ns-task-detail',
  templateUrl: './task-detail.component.html',
  styleUrls: ['./task-detail.component.css']
})
export class TaskDetailComponent implements OnInit {
  task: Task | undefined;
  platformInfo: string = '';

  constructor(
    private route: ActivatedRoute,
    private routerExtensions: RouterExtensions,
    private taskService: TaskService
  ) {}

  ngOnInit(): void {
    const id = +this.route.snapshot.params['id'];
    this.task = this.taskService.getTaskById(id);
    
    this.platformInfo = isAndroid ? 'ü§ñ Android' : 'üçé iOS';
  }

  onBack(): void {
    this.routerExtensions.back();
  }

  onToggleComplete(): void {
    if (this.task) {
      this.taskService.toggleComplete(this.task.id);
      this.task = this.taskService.getTaskById(this.task.id);
    }
  }

  getPriorityLabel(priority?: string): string {
    switch(priority) {
      case 'alta': return 'üî¥ Alta';
      case 'media': return 'üü° Media';
      case 'baja': return 'üü¢ Baja';
      default: return '‚ö™ Sin prioridad';
    }
  }

  getPriorityColor(priority?: string): string {
    switch(priority) {
      case 'alta': return '#FFB3BA';
      case 'media': return '#FFE4B5';
      case 'baja': return '#B3E5FC';
      default: return '#E0E0E0';
    }
  }
}
```

